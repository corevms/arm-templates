{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "environment": {
            "type": "string"
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]"
        },
        "nickName": {
            "type": "string"
        },
        "sku": {
            "type": "string"
        },
        "version": {
            "type": "string"
        }
    },
    "variables": {
        "planIdentifier": "[concat('plan-', parameters('nickName'), '-', parameters('environment'), '-', parameters('version'))]"
    },
    "resources": [
        {
            "name": "[variables('planIdentifier')]",
            "type": "Microsoft.Web/serverfarms",
            "apiVersion": "2018-02-01",
            "location": "[parameters('location')]",
            "sku": {
                "name": "[parameters('sku')]"
            },
            "properties": {}
        }
    ]
}